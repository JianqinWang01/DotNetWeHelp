@{
    ViewData["Title"] = "Home Page";
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - DotNetWeHelp</title>

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
 
    <link rel="dns-prefetch" href="//fonts.gstatic.com">

    <!-- Fonts -->
    <link href="https://fonts.googleapis.com/css?family=Quicksand:300,400,500,700&display=swap" rel="stylesheet">

    <!-- Styles -->
    <link rel="stylesheet" href="~/css/app.css'">
    <link rel="stylesheet" href="~/css/dashboard.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css">
    <link rel="stylesheet" href="~/css/style.css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.1/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.16.0/umd/popper.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.4.1/js/bootstrap.min.js"></script>
</head>

<body>
    <div class="container">
        <nav class="navbar">
            @if (!User.Identity.IsAuthenticated)
            {<ul class="navbar-nav ml-auto">
                    <li class="nav-item ">
                        <a asp-action="Login" asp-controller="Account" class="nav-link">Login</a>
                    </li>
                </ul>
            }
            else {
            <ul class="navbar-nav">
                <li class="nav-item ">
                    <a asp-action="Logout" asp-controller="Account" class="nav-link">Logout</a>
                </li>
            </ul>}
            <ul class="navbar-nav ml-auto">
                <li class="nav-item ">
                    <a asp-action="Register" asp-controller="Account" class="nav-link">Register</a>
                </li>
            </ul>

        </nav>
        <hr />
        <div class="text-center">
            <h1 class="display-4">Welcome</h1>
            <p>Learn about me<a href="https://jianqinwang01.github.io/">Porfolio</a>.</p>
        </div>

        <div>
            <div class="grid-container-lanttern">

                <div style="width: 250px;padding: 5px;margin-left: 1%;">

                    <div class="w-100"></div>
                    <div class="col-1-auto mt-3" style="text-align: left">
                        <img src="~/assets/mail.png"><span style="font-size: 15px;padding-left: 5px">wjqcau@126.com</span>
                    </div>

                    <div class="w-100"></div>
                    <div class="col-1-auto mt-3" style="text-align: left">
                        <img src="~/assets/call.png"> <span style="font-size: 15px">+1 519 997 4083</span>
                    </div>

                    <div class="w-100"></div>
                    <div class="col-1-auto mt-3" style="text-align: left">
                        <img src="~/assets/location.png"><span style="font-size: 15px">Windsor, ON, Canada</span>
                    </div>

                </div>
                <div class="lanterngrandfather">
                    <div class="lanterparent" style="background-color: transparent">
                        <div class="lantern"><span class="lanterchild"></span></div>
                    </div>
                </div>
                <div style="margin-left: 20%;width: 200px;">
                    <img src="~/assets/myphoto.jpg" class="myImg">
                </div>


            </div>

        </div>


    </div>
    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2020 - DotNetWeHelp - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/js/app.js"></script>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
</body>


</html>