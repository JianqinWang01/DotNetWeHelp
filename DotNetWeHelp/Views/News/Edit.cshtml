@model DotNetWeHelp.Models.News

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_dashBoard.cshtml";
}

    <div class="card shadow">
        <div class="card-header py-3">
            <h6 class="m-0 font-weight-bold text-primary">Edit NEWS</h6>
        </div>
        <div class="card-body">

            <div class="row">
                <div class="col col-lg-12 col-md-12 col-sm-12">
                    <form asp-action="Edit" enctype="multipart/form-data" method="post">

                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <input type="hidden" asp-for="Id" />
                        <div class="form-group">
                            <label asp-for="Title" class="control-label"></label>
                            <input asp-for="Title" class="form-control" />
                            <span asp-validation-for="Title" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="CreateDate" class="control-label"></label>
                            <input asp-for="CreateDate" class="form-control" />
                            <span asp-validation-for="CreateDate" class="text-danger"></span>
                        </div>

                        <div class="form-group">
                            <label asp-for="ImagePath" class="control-label">
                                Image:
                            </label>
                            <input type="hidden" asp-for="ImagePath" lass="form-control" value="@Model.ImagePath" />

                        </div>

                        <img src="@Url.Content(@Model.ImagePath)" with="100" height="100" />
                        <div class="form-group">
                            <label for="ImageChoose">ImageChoose</label>
                            <input id="ImageChoose" name="ImageFile" class="form-control" type="file" />
                        </div>

                        <div class="form-group">

                            <input type="hidden" name="id" lass="form-control" value="@Model.Id" />

                        </div>
                        <div class="form-group">

                            <input type="hidden" name="oldName" lass="form-control" value="@Model.ImagePath" />

                        </div>
                        <div class="form-group">
                            <label asp-for="Description" class="control-label"></label>
                            <input asp-for="Description" class="form-control" />
                            <span asp-validation-for="Description" class="text-danger"></span>
                        </div>


                        <div class="float-left">
                            <div class="form-group">
                                <input type="submit" value="Save" class="btn btn-primary" />
                            </div>
                        </div>
                    </form>
                        <div class="float-right">
                            <div class="form-group">
                                <button class="btn  btn-danger" onclick="location.href='@Url.Action("Index", "News")'">Cancel</button>
                            </div>
                        </div>
</div>
            </div>
            </div>
        </div>
            

            @section Scripts {
                @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
            }
